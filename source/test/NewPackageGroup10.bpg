#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS =NormalPackage.bpl PackageWithSuffix.bpl Project1.exe runtimepackage.bpl \
  
#------------------------------------------------------------------------------
default: $(PROJECTS)                                                           
#------------------------------------------------------------------------------

NormalPackage.bpl: D7\package_suffix\NormalPackage.dpk
  $(DCC)

PackageWithSuffix.bpl: D7\package_suffix\PackageWithSuffix.dpk
  $(DCC)

Project1.exe: D7\package_suffix\Project1.dpr
  $(DCC)

runtimepackage.bpl: D7\package_suffix\runtimepackage.dpk
  $(DCC)

