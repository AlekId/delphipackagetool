#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS =designtimepackage.bpl NormalPackage.bpl PackageWithSuffix.bpl runtimepackage.bpl \
  Project1.exe 
#------------------------------------------------------------------------------
default: $(PROJECTS)                                                           
#------------------------------------------------------------------------------

designtimepackage.bpl: designtimepackage.dpk
  $(DCC)

NormalPackage.bpl: NormalPackage.dpk
  $(DCC)

PackageWithSuffix.bpl: PackageWithSuffix.dpk
  $(DCC)

runtimepackage.bpl: runtimepackage.dpk
  $(DCC)

Project1.exe: Project1.dpr
  $(DCC)

